<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="App1.MainPage">

    <Grid>
        <StackLayout>
            <Label Text="ChronicallyTracking" HorizontalOptions="Center" TextColor="Black" FontSize="Title"/>
            <Label Text="Login" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Title" BackgroundColor="lightgray" WidthRequest="1000" />
        </StackLayout>
        <StackLayout VerticalOptions="Center">
            <Entry Placeholder="Email"></Entry>
            <Entry Placeholder="Password" IsPassword="True"></Entry>
            <Button Text="Login" TextColor="White" BackgroundColor="Black" IsEnabled="True" Clicked="LoginButtonClicked"/>
            <Button Text="Create a new account" TextColor="Blue" BackgroundColor="Transparent" Clicked="CreateNewAccountButtonClicked"/>
        </StackLayout>
    </Grid>

</ContentPage>
